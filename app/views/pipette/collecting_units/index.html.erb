<p class="flash-success d-none"><%= notice %></p>

<div id="collecting-units" class="text-center">
  <h1>Collecting units</h1>

  <div id="collecting_units">
    <%= link_to "New collecting unit", new_collecting_unit_path %>
    <table class="table table-striped table-bordered">
      <thead class="table-light">
      <tr>
        <th scope="col">Collecting Unit Code</th>
        <th scope="col">Edit</th>
      </tr>
      </thead>
      <tbody class="table-group-divider">
      <% @collecting_units.each do |collecting_unit| %>
        <tr>
          <td><%= collecting_unit.collecting_unit %></td>
          <td><%= link_to "Edit", edit_collecting_unit_path(collecting_unit.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>